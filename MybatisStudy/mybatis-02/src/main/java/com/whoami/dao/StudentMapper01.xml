<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whoami.dao.StudentMapper01">
    <select id="getStudent01" resultType="com.whoami.pojo.Student01">
        select * from mysqlStudy.student
    </select>
    <select id="getStudentByID" resultType="com.whoami.pojo.Student01">
        select * from mysqlStudy.student where id = #{id};
    </select>

    <insert id="addStudent" parameterType="com.whoami.pojo.Student01">
        insert into mysqlStudy.student (name,sex,age) values (#{name},#{sex},#{age})
    </insert>
    
    <update id="updateStudent" parameterType="com.whoami.pojo.Student01">
        UPDATE mysqlStudy.student set name=#{name},address=#{address} where id = #{id}
    </update>

    <delete id="deleteStudentById" parameterType="int">
        delete from mysqlStudy.student where id = #{id}
    </delete>

    <select id="getStudentByDyanmicg" resultType="com.whoami.pojo.Student01">
        select * from mysqlStudy.student WHERE 1=1
        <if test="name != null">
            AND name = #{name}
        </if>
        <if test="sex != null">
            AND sex = #{sex}
        </if>
        <if test="age != null">
            AND age = #{age}
        </if>
    </select>

    <select id="getStudentByForeach" resultType="com.whoami.pojo.Student01">
        select * from mysqlStudy.student where
        age in
        <foreach collection="item1" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </select>

</mapper>
